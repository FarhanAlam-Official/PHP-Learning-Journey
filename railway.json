{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "docker-compose up -d",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PHP_DB_HOST": "db",
        "PHP_DB_NAME": "php_journey",
        "PHP_DB_USER": "root",
        "PHP_DB_PASS": "example"
      }
    }
  }
}
